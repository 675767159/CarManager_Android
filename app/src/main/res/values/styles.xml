<resources
    >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="NavBarStyle">
        <item name="android:id">@id/NavbarView</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navbar_height</item>

    </style>


    <style name="RegisterSubviewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/horizon_margin</item>
        <item name="android:layout_marginRight">@dimen/horizon_margin</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>

    </style>

    <style name="EditCarInputViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    
    
    <style name="DrivingDisplayStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/horizon_margin</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="CarExaminationTitleContentStyle"
        >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>


    <style name="CarExaminationSegmentStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/car_examnation_segment</item>
        <item name="android:textColor">@color/radibutton_text</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    

</resources>
